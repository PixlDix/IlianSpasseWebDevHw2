
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Courses</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Courses</h2>
            <span class="text-light">Use the below form to Update a Course</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Course Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="courseName" value="<%= user.courseName %>" placeholder="Name of Course">
        </div>
        <div class="form-group">
            <label for="grade" class="text-light">Grade</label>
            <input type="text" name="courseGrade" value="<%= user.courseGrade%>" placeholder="Letter Grade">
        </div>
        <div class="form-group">
            <label for="credits" class="text-light">Number of Credits</label>
            <input type="text" name="credits" value="<%= user.credits%>" placeholder="Number of Credits">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->