 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Course Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="courseName" value="" placeholder="Name of the Course">
        </div>
        <div class="form-group">
            <label for="grade" class="text-light">Grade</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="courseGrade" value="" placeholder="Letter Grade">
        </div>
        <div class="form-group">
            <div class="form-group">
                <label for="credits" class="text-light">Number of Credits</label>
                <input type="hidden" name="id" value="">
                <input type="text" name="credits" value="" placeholder="Number of Credits">
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Add Course</button>
        </div>

    </div>
</form>